<h1>Listing boards</h1>

<div class="photo">
	<img class="arrondi" src="/images/La_Torche.jpeg" alt="Coucher de soleil sur la plage" title="Coucher de soleil :)"   height="300" width="400" /><p class="caption">Coucher de soleil</p>
</div>

<div class="table">
	<table>
  	<tr>
    	<th>Name</th>
    	<th>Size</th>
  	</tr>

	<% @boards.each do |board| %>
  	<tr>
    	<td class="ligne"><%= board.name %></td>
    	<td class="ligne"><%= board.size %></td>
			<% if can? :show, board %>
    		<td class="ligne"><%= link_to 'Show', board %></td>
    	<% end %>
			<% if can? :edit, board %>
				<td class="ligne"><%= link_to 'Edit', edit_board_path(board) %></td>
			<% end %>
			<% if can? :destroy, board %>
    		<td class="ligne"><%= link_to 'Destroy', board, :confirm => 'Are you sure?', :method => :delete %></td>
			<% end %>  
		</tr>
	<% end %>
	</table>
</div>

<br />

<%= link_to 'New Board', new_board_path %>
