<h1>Listing surfers</h1>

<div class="photo">
	<img class="arrondi" src="/images/La_Torche.jpeg" alt="Coucher de soleil sur la plage" title="Coucher de soleil :)"   height="300" width="400" /><p class="caption">Coucher de soleil</p>
</div>

<div class="table">
	<table>
  	<tr>
    	<th>Firstname</th>
    	<th>Name</th>
    	<th>Email</th>
    	<th>Tel</th>
  	</tr>

	<% @surfers.each do |surfer| %>
  	<tr>
    	<td class="ligne"><%= surfer.firstname %></td>
    	<td class="ligne"><%= surfer.name %></td>
    	<td class="ligne"><%= surfer.email %></td> 
   		<td class="ligne"><%= surfer.tel %></td> 
			<% if can? :show, surfer %>
			<td class="ligne"><%= link_to 'Show', surfer %></td>
			<% end %>
			<% if can? :edit, surfer %>    	
			<td class="ligne"><%= link_to 'Edit', edit_surfer_path(surfer) %></td>
  		<% end %>
    	<% if can? :destroy, surfer %>
			<td class="ligne"><%= link_to 'Destroy', surfer, :confirm => 'Are you sure?', :method => :delete %></td>
  		<% end %>
		</tr>
		<% end %>
	</table>
</div>

<br />

<% if can? :manage, :all%>
<%= link_to 'New Surfer', new_surfer_path %>
<% end %>

